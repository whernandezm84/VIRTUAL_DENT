{
    "name": "dentaltech/core",
    "description": "Sistema de gestión para laboratorios dentales",
    "type": "project",
    "require": {
        "php": "^7.4 || ^8.0",
        "ext-pdo": "*",
        "ext-json": "*",
        "vlucas/phpdotenv": "^5.3",
        "firebase/php-jwt": "^6.0",
        "phpmailer/phpmailer": "^6.6",
        "monolog/monolog": "^2.3",
        "nesbot/carbon": "^2.55"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "includes/functions.php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "platform-check": false
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "test": "phpunit tests"
    }
}
